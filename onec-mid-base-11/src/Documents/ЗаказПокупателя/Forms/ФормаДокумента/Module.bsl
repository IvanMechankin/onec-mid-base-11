	//++ Мещанкин И.В. Задание 11.2.2  02/10/25
	Режим = РежимДиалогаВопрос.ДаНет;
	Ответ = Ждать ВопросАсинх("Пересчитать сумму?", Режим, 0);
	Если Ответ = КодВозвратаДиалога.Нет Тогда
		Возврат;
	Иначе
		ИВМ_ПересчётТаблиц();
	КонецЕсли;
	//--
		
